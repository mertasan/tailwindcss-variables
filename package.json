{
  "name": "@mertasan/tailwindcss-variables",
  "version": "1.1.3",
  "description": "Easily create css variables without the need for a css file!",
  "main": "src/index.js",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/mertasan/tailwindcss-variables",
  "bugs": {
    "url": "https://github.com/mertasan/tailwindcss-variables/issues"
  },
  "homepage": "https://github.com/mertasan/tailwindcss-variables",
  "author": "Mert AÅŸan <mert@yediyuz.com> (https://github.com/mertasan)",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "build": "env NODE_ENV=production node scripts/build.js",
    "build:clean": "env NODE_ENV=production CLEAN=true node scripts/build.js",
    "style": "eslint .",
    "lint": "npm run style",
    "format": "prettier --write ."
  },
  "keywords": [
    "tailwindcss",
    "css variables",
    "tailwind css variables",
    "tailwindcss css variables",
    "tailwindcss dark mode",
    "tailwindcss multi theme"
  ],
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fs-extra": "^10.0.0",
    "jest": "^26.6.3",
    "postcss": "^8.2.15",
    "prettier": "^2.2.1",
    "snapshot-diff": "^0.8.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.1.2 || ^2.1.2"
  },
  "peerDependencies": {
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.13",
    "tailwindcss": "^2.1.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "parser": "flow",
    "overrides": [
      {
        "files": [
          "**/*.css",
          "**/*.scss",
          "**/*.html"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "jest": {
    "testTimeout": 30000,
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/__tests__/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/__tests__/util/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/util/"
    ]
  },
  "browserslist": [
    "> 1%",
    "not edge <= 18",
    "not safari <= 13",
    "not ie 11",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=12.13.0"
  }
}
